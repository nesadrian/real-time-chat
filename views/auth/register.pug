extends layout-auth.pug

block content
    section(class="auth-container auth-container--register")
        h1(class="auth-form_title") Register
        form(class="auth-form auth-form--register")
            input(class="auth-form_input auth-form_input--register" placeholder="FIRST NAME")
            input(class="auth-form_input auth-form_input--register" placeholder="LAST NAME")
            input(class="auth-form_input auth-form_input--register" placeholder="USERNAME")
            input(class="auth-form_input auth-form_input--register" placeholder="EMAIL")
            input(class="auth-form_input auth-form_input--register" placeholder="PASSWORD")
            input(class="auth-form_input auth-form_input--register" placeholder="CONFIRM PASSWORD")
            input(class="auth-form_input auth-form_input--register auth-form_input--submit" type="submit" value="REGISTER")
        a(href="login") Login
